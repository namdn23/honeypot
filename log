sudo iptables-legacy -A FORWARD -d 192.168.2.10 -p tcp --dport 2222 -j LOG --log-prefix "HACKER_LOG: "
sudo iptables-legacy -A FORWARD -s 192.168.159.0/24 -d 192.168.2.10 -p tcp --dport 2222 -j LOG --log-prefix "HACKER_LOG: "

sudo iptables-legacy -L FORWARD -v -n


echo ':msg, contains, "HACKER_LOG: " -/var/log/honeypot.log' | sudo tee /etc/rsyslog.d/iptables.conf
sudo systemctl restart rsyslog

sudo tail -f /var/log/honeypot.log

sudo tail -f /var/log/honeypot.log


tail -f /var/log/cowrie/cowrie.log


sudo touch /var/log/honeypot.log
sudo chmod 644 /var/log/honeypot.log
sudo chown syslog:adm /var/log/honeypot.log


alert tcp 192.168.159.0/24 any -> 192.168.2.10 2222 (msg:"Suspicious TCP to Honeypot"; sid:1000001;)

sudo snort -i ens33 -c /etc/snort/snort.conf -l /var/log/snort
sudo cat /var/log/snort/alert

sudo tcpdump -i ens33 host 192.168.159.143 and port 2222 -w /var/log/honeypot.pcap

sudo tcpdump -r /var/log/honeypot.pcap
